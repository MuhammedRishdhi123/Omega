<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.settingActivity">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar_settings"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/login_textview">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:src="@drawable/profile"
            android:layout_below="@id/appbar_settings"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"/>
    <EditText
        android:id="@+id/set_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:hint="User name"
        android:layout_margin="25dp"
        android:padding="10dp"
      />
    <EditText
        android:id="@+id/set_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_username"
        android:hint="Phone"
        android:layout_margin="25dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/set_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_phone"
        android:hint="Email"
        android:layout_margin="25dp"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/set_password1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/set_email"
        android:hint="Password"
        android:layout_margin="25dp"
        android:padding="10dp"
        />

    <Button
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/login_textview"
        android:textStyle="bold"
        android:layout_below="@id/set_password1"/>


</RelativeLayout>